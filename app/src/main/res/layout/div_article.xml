<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg"
    android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/AppColorWhite"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/articleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/match"
            />
    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"

            android:scaleType="fitXY"
            app:srcCompat="@drawable/date_pub" />

        <TextView
            android:id="@+id/datePubArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="13dp"

            android:text="2019-02-02 15:30"
            android:textColor="@color/AppColor2"
            android:textSize="14sp"
            android:fontFamily="@font/changa"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/titreArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="الاتحـاد يعاني"
        android:textAlignment="center"
        android:textSize="@dimen/titre"
        android:textColor="@color/AppColor2"
        android:fontFamily="@font/changa"
        android:lineSpacingExtra="-5dp"/>

    <TextView
        android:id="@+id/textArticle"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="ه\ا الفريق العريق الدي عرف التأسيس سنة  بعزم من رجال 1932  و مجاهدين ثوريين الدين لبوا نداء الواجب و صعدوا الجبال مضحيين في سبيل هدا الوطن الغالي "

        android:textColor="@color/AppColorBlack"
        android:textSize="@dimen/descrep"
        android:fontFamily="@font/changa"
        android:lineSpacingExtra="-5dp"/>

    <TextView
        android:id="@+id/affplus"
        android:layout_width="73dp"
        android:layout_height="29dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/changa"
        android:text="اقرأ اكثر"
        android:textAlignment="center"
        android:textColor="@color/AppColor2"
        android:textSize="13sp" />

</LinearLayout>