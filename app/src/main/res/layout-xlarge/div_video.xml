<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <WebView
        android:id="@+id/myvideo"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_margin="20dp"
        tools:ignore="WebViewLayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"

            android:scaleType="fitXY"
            app:srcCompat="@drawable/date_pub" />

        <TextView
            android:id="@+id/datePubVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="13dp"

            android:text="2019-02-02 15:30"
            android:textColor="@color/AppColor2"
            android:textSize="14sp"
            android:fontFamily="@font/changa" />
    </LinearLayout>

    <TextView
        android:id="@+id/titreVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Usmb Soufaire"
        android:fontFamily="@font/changa"
        android:textAlignment="center"
        android:textColor="@color/AppColor2"
        android:textSize="@dimen/titre" />

    <TextView
        android:id="@+id/textVideo"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:fontFamily="@font/changa"
        android:lineSpacingExtra="-6dp"
        android:text="Usmb Soufaire Depuis des anné mais personne n a intervenir car y a plusieurd de chahamine qui veulent faire trahir l equipe et de volé l argent contre les hommes qui son honete mais quand tu voix ces hommes .."

        android:textColor="@color/AppColorBlack"
        android:textSize="@dimen/descrep" />

    <TextView
        android:id="@+id/affplusVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/changa"
        android:text="Afficher plus"
        android:textAlignment="center"
        android:textColor="@color/AppColor2"
        android:textSize="17sp" />
</LinearLayout>